<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="bitbag_sylius_agreement.context.ui.shop.welcome" class="Tests\BitBag\SyliusAgreementPlugin\Behat\Context\Ui\Shop\WelcomeContext">
            <argument type="service" id="bitbag_sylius_agreement.page.shop.static_welcome" />
            <argument type="service" id="bitbag_sylius_agreement.page.shop.dynamic_welcome" />
        </service>

        <service id="bitbag_sylius_agreement.page.shop.static_welcome"
                 class="Tests\BitBag\SyliusAgreementPlugin\Behat\Page\Shop\StaticWelcomePage"
                 parent="sylius.behat.symfony_page" public="false" />
        <service id="bitbag_sylius_agreement.page.shop.dynamic_welcome"
                 class="Tests\BitBag\SyliusAgreementPlugin\Behat\Page\Shop\DynamicWelcomePage"
                 parent="sylius.behat.symfony_page" public="false" />
    </services>
</container>
