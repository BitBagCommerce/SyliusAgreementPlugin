<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="bitbag_sylius_agreement_plugin.resolver.composite_agreement_history"
                 class="BitBag\SyliusAgreementPlugin\Resolver\CompositeAgreementHistoryResolver">
            <argument type="tagged_iterator" tag="bitbag_sylius_agreement_plugin.agreement_history_resolver"/>
            <argument type="service" id="bitbag_sylius_agreement_plugin.factory.agreement_history"/>
        </service>

        <service id="bitbag_sylius_agreement_plugin.resolver.agreement"
                 class="\BitBag\SyliusAgreementPlugin\Resolver\CompositeAgreementResolver">
            <argument type="service" id="bitbag_sylius_agreement_plugin.repository.agreement"/>
            <argument type="collection"/>
            <argument type="iterator"/>
            <argument>%sylius_agreement_plugin.extended_form_types%</argument>
        </service>

        <service id="BitBag\SyliusAgreementPlugin\Resolver\AgreementHistory\OrderAgreementHistoryResolver">
            <argument type="service" id="sylius.context.cart"/>
            <tag name="bitbag_sylius_agreement_plugin.agreement_history_resolver" priority="0"/>
            <argument type="service" id="BitBag\SyliusAgreementPlugin\Repository\AgreementHistoryRepository"/>
        </service>

        <service id="BitBag\SyliusAgreementPlugin\Resolver\AgreementHistory\ShopUserAgreementHistoryResolver">
            <argument type="service" id="security.helper"/>
            <argument type="service" id="BitBag\SyliusAgreementPlugin\Repository\AgreementHistoryRepository"/>
        </service>

        <service id="bitbag_sylius_agreement_plugin.resolver.agreement_approval"
                 class="BitBag\SyliusAgreementPlugin\Resolver\CompositeAgreementApprovalResolver">
            <argument type="service" id="bitbag_sylius_agreement_plugin.resolver.composite_agreement_history"/>
        </service>

    </services>
</container>
